@model IEnumerable<Equipment>
@{
    ViewData["Title"] = "Available Equipment";
}

<div class="container">
    <h1 class="text-center mb-4">Available Equipment</h1>

    <div class="alert alert-info text-center">
        <strong>Note:</strong> This page shows only equipment that is currently available for borrowing.
    </div>

    @{
        var equipment = Model ?? new List<Equipment>();
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Equipment ID</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in equipment)
                {
                    <tr>
                        <td>@item.EquipmentId</td> <!-- Changed from Id to EquipmentId -->
                        <td>@item.Type</td>
                        <td>@item.Description</td>
                        <td>
                            <span class="badge bg-success">Available</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("AllEquipment", "Equipment")" class="btn btn-outline-primary me-2">View All Equipment</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
    </div>
</div>