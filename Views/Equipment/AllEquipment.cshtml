@model IEnumerable<Equipment>
@{
    ViewData["Title"] = "All Equipment Listing";
}

<div class="container mt-4">
    <h2>All Equipment Listing</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No equipment found in the database.</p>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.IsAvailable ? "table-success" : "table-secondary")">
                        <td>@item.Id</td>
                        <td>@item.Type</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unavailable</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>