@model IEnumerable<Equipment>
@{
    ViewData["Title"] = "All Equipment";
}

<div class="container">
    <h1 class="text-center mb-4">All Equipment Listing</h1>

    <!-- Search Box -->
    <div class="row mb-4">
        <div class="col-md-6">
            <input type="text" id="searchInput" class="form-control" placeholder="Search equipment...">
        </div>
    </div>

    @{
        var equipment = Model ?? new List<Equipment>();
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Equipment ID</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody id="equipmentTable">
                @foreach (var item in equipment)
                {
                    <tr>
                        <td>@item.EquipmentId</td>
                        <td>@item.Type</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.Availability)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("AvailableEquipment", "Equipment")" class="btn btn-success me-2">View Available Only</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
    </div>
</div>

@section Scripts {
    <script>
        // Simple client-side search
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchText = this.value.toLowerCase();
            const rows = document.querySelectorAll('#equipmentTable tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });
    </script>
}