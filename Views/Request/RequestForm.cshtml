@model BorrowRequest
@{
    ViewData["Title"] = "Equipment Request Form";
}

<div class="container">
    <h1 class="text-center mb-4">Equipment Request Form</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="RequestForm" method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Personal Information</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Full Name *</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">Role *</label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="">Select Role</option>
                                        <option value="Student">Student</option>
                                        <option value="Professor">Professor</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number *</label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="xxx-xxx-xxxx" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="card-title mt-4">Equipment Details</h5>
                        
                        <div class="mb-3">
                            <label asp-for="EquipmentType" class="form-label">Equipment Type *</label>
                            <select asp-for="EquipmentType" class="form-select">
                                <option value="">Select Equipment Type</option>
                                <option value="Laptop">Laptop</option>
                                <option value="Phone">Phone</option>
                                <option value="Tablet">Tablet</option>
                                <option value="Another">Another</option>
                            </select>
                            <span asp-validation-for="EquipmentType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequestDetails" class="form-label">Request Details *</label>
                            <textarea asp-for="RequestDetails" class="form-control" rows="3" placeholder="Please provide details about your request..."></textarea>
                            <span asp-validation-for="RequestDetails" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label">Duration (Days) *</label>
                            <input asp-for="Duration" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Request</button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}