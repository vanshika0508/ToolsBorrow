@model IEnumerable<Request>
@{
    ViewData["Title"] = "Pending Requests";
}

<div class="container mt-4">
    <h2>Pending Requests</h2>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No pending requests at the moment.</p>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Equipment Type</th>
                    <th>Requester Name</th>
                    <th>Role</th>
                    <th>Duration (Days)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Equipment?.Type</td>
                        <td>@request.Name</td>
                        <td>@request.Role</td>
                        <td>@request.DurationDays</td>
                        <td>
                            <span class="badge bg-warning">@request.Status</span>
                        </td>
                        <td>
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@request.Id" />
                                <button type="submit" name="status" value="Accepted" class="btn btn-success btn-sm">Accept</button>
                            </form>
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@request.Id" />
                                <button type="submit" name="status" value="Denied" class="btn btn-danger btn-sm">Deny</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>