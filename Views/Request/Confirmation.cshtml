@model Request
@{
    ViewData["Title"] = "Request Confirmation";
}

<div class="container mt-4">
    <div class="alert alert-success">
        <h2>Request Submitted Successfully!</h2>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h4>Request Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Request ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
                
                <dt class="col-sm-3">Role:</dt>
                <dd class="col-sm-9">@Model.Role</dd>
                
                <dt class="col-sm-3">Duration:</dt>
                <dd class="col-sm-9">@Model.DurationDays days</dd>
                
                <dt class="col-sm-3">Equipment:</dt>
                <dd class="col-sm-9">@Model.Equipment?.Type - @Model.Equipment?.Description</dd>
                
                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning">@Model.Status</span>
                </dd>
                
                <dt class="col-sm-3">Submitted:</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("f")</dd>
            </dl>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="@Url.Action("RequestForm")" class="btn btn-primary">Submit Another Request</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Return to Home</a>
    </div>
</div>